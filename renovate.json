{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "gitIgnoredAuthors": ["github-actions[bot]@users.noreply.github.com"],
  "timezone": "UTC",
  "schedule": ["at any time"],
  "labels": ["dependencies"],
  "assignees": ["ndrwstn"],
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{ lookup (split depName '/') 1 }}",
  "commitMessageExtra": "to {{newVersion}}",
  "branchPrefix": "update/",
  "branchTopic": "{{depNameSanitized}}-{{newVersion}}",
  "fetchChangeLogs": "pr",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update GCS version in packages/gcs/default.nix",
      "fileMatch": ["^packages/gcs/default\\.nix$"],
      "matchStrings": ["version = \"(?<currentValue>.*?)\";"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "richardwilkes/gcs",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update opencode version in flake.nix",
      "fileMatch": ["^flake\\.nix$"],
      "matchStrings": [
        "opencode\\.url = \"github:anomalyco/opencode/v(?<currentValue>.*?)\";"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "anomalyco/opencode",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update agent-browser version in packages/agent-browser/default.nix",
      "fileMatch": ["^packages/agent-browser/default\\.nix$"],
      "matchStrings": ["version = \"(?<currentValue>.*?)\";"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "vercel-labs/agent-browser",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update marker version in packages/marker/default.nix",
      "fileMatch": ["^packages/marker/default\\.nix$"],
      "matchStrings": ["version = \"(?<currentValue>.*?)\";"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "datalab-to/marker",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update surya version in packages/surya/default.nix",
      "fileMatch": ["^packages/surya/default\\.nix$"],
      "matchStrings": ["version = \"(?<currentValue>.*?)\";"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "datalab-to/surya",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["anomalyco/opencode"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["vercel-labs/agent-browser"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["datalab-to/marker"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["datalab-to/surya"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
