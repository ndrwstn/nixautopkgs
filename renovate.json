{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "gitIgnoredAuthors": ["github-actions[bot]@users.noreply.github.com"],
  "timezone": "UTC",
  "schedule": ["at any time"],
  "labels": ["dependencies"],
  "assignees": ["ndrwstn"],
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{ lookup (split depName '/') 1 }}",
  "commitMessageExtra": "to {{newVersion}}",
  "branchPrefix": "update/",
  "branchTopic": "{{depNameSanitized}}-{{newVersion}}",
  "fetchChangeLogs": "pr",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update GCS version in packages/gcs.nix",
      "fileMatch": ["^packages/gcs\\.nix$"],
      "matchStrings": ["version = \"(?<currentValue>.*?)\";"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "richardwilkes/gcs",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update OpenSpec version in packages/openspec.nix",
      "fileMatch": ["^packages/openspec\\.nix$"],
      "matchStrings": ["version = \"(?<currentValue>.*?)\";"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Fission-AI/OpenSpec",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update opencode version in flake.nix",
      "fileMatch": ["^flake\\.nix$"],
      "matchStrings": [
        "opencode\\.url = \"github:sst/opencode/v(?<currentValue>.*?)\";"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "sst/opencode",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["sst/opencode"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
